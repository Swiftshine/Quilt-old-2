{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // Include directories
                "-I",
                    "include/",
                "-I",
                    "include/lib/",
                "-I",
                    "include/lib/imgui/",
                
                // Library path
                "-L",
                    "lib",
                
                // Source files
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/Quilt",
                // Objects (glad, imgui)
                    "lib/*.o",

                // Lib files
                "-lglfw3", // libglfw3.a
                "-lgdi32",
                "-luser32",
                "-lshell32",
                "-lopengl32",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}